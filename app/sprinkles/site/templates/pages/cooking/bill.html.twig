{% extends "pages/abstract/default.html.twig" %}

{# Overrides blocks in head of base template #}
{% block page_title %}Cancel  your booking{% endblock %}

{% block body_matter %}
<div class="container">
    Welcome, {{ current_user.first_name }}!
    {% include "pages/cooking/cooking-default-options.html.twig" %}
    <div class="container">
    <form class="js-form" method="{{form.method | default('GET')}}" action="{{site.uri.public}}/cooking/bill">
      {% include "forms/csrf.html.twig" %}
    <h3> Enter your Booking ID </h3>
    <input type="text" class="form-control" placeholder="Booking ID" name="id" required/></br>

            <input type="submit" class="btn btn-warning" value="Generate BILL" onclick="billgenerate()"/>

  {% for i in bills %}
            <h4>{{i.id}} The cook name is {{i.cook_name}} and the mobile number used for booking is {{i.mobile}} and was booked on {{i.created_at}}</h4>

          </form>
              {% endfor %}
</div>
{% endblock %}
